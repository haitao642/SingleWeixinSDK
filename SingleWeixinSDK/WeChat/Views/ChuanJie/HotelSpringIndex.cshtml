@{
    ViewBag.Title = "View";
}
@model Model.ChuanJie.HotSpringIndexModel
<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" name="viewport" />
    <title>@Model.storeM.str_StoreName</title>

    <link rel="stylesheet" href="/Content/amazeui.min.css">
    <link rel="stylesheet" href="/Content/app.css">
    <link rel="stylesheet" href="~/Content/public.css">
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <!--[if (gte IE 9)|!(IE)]><!-->
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <!--<![endif]-->
    <!--[if lte IE 8 ]>
    <script src="http://libs.baidu.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://cdn.staticfile.org/modernizr/2.8.3/modernizr.js"></script>
    <script src="assets/js/amazeui.ie8polyfill.min.js"></script>
    <![endif]-->
    <script src="/Scripts/amazeui.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/layer_mobile/layer.js"></script>
    <script src="/Scripts/Dialog.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/Content/weui.css" />
</head>
<body>
    <div data-am-sticky>
        <div class="header">
            <div class="am-u-sm-2 am-vertical-align" style="height:100%;">
                @*<img class="img_back am-vertical-align-middle" src="~/Images/back.png" style="margin-left:5px;" />
                    <text class="am-vertical-align-middle" style="font-size:16px;color:#ffffff;">返回</text>*@
            </div>
            <div class="am-u-sm-8 am-vertical-align" style="height:100%;text-align:center;">
                <text class="am-vertical-align-middle" style="font-size:16px;color:#ffffff;">温泉预订</text>
            </div>
            <div class="am-u-sm-2" style="height:100%;">
            </div>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.message))
    {
        <script type="text/javascript">
            Dialog("温馨提醒", '@Model.message', 1);
        </script>
    }
    <div class="am-g">
        <div class="am-u-sm-12">
           
            <!-- Slider 主容器，必需 -->
            <div class="swiper-container" id="swipercontainer">

                <!-- slides 容器，必需 -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    @foreach (Model.StoreImgM m in Model.listimg)
                    {
                        <div class="swiper-slide"><img src="@m.str_DLPath" title="" style="height:250px;width:100%;"></div>
                    }

                    @*<div class="swiper-slide">Slide 2</div>
                        <div class="swiper-slide">Slide 3</div>
                        ...*@
                </div>

                <!-- 分页容器，可选 -->
                <div class="swiper-pagination"></div>

                <!-- 上下翻页箭头，可选 -->
                @*<div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>*@

                <!-- 滚动条容器，可选 -->
                @*<div class="swiper-scrollbar"></div>*@
            </div>
        </div>
    </div>
   
</body>
</html>